# If set, web app calls Lambda HTTP API directly.
# If empty, local Next.js /api/* routes are used.
NEXT_PUBLIC_API_BASE_URL=

# If true, Character endpoints are served by Next.js API routes (/api/character/*)
# so you can validate Character features without SAM deploy.
NEXT_PUBLIC_USE_NEXT_API=false

# Required when NEXT_PUBLIC_USE_NEXT_API=true (server-side only)
FFLOGS_CLIENT_ID=
FFLOGS_CLIENT_SECRET=
FFLOGS_TOKEN_URL=https://www.fflogs.com/oauth/token
FFLOGS_GRAPHQL_URL=https://www.fflogs.com/api/v2/client
XIVAPI_BASE_URL=https://xivapi.com
